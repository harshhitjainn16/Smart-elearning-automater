{
  "manifest_version": 3,
  "name": "Smart E-Learning Automator",
  "version": "1.0.0",
  "description": "Automate video playback, track progress, and boost learning efficiency",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.coursera.org/*",
    "https://www.udemy.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.skillshare.com/*",
    "https://skillshare.com/*",
    "https://www.pluralsight.com/*",
    "https://pluralsight.com/*",
    "https://www.edx.org/*",
    "https://edx.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-automation": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start/Stop automation"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content/youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.coursera.org/*"
      ],
      "js": ["content/coursera.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.udemy.com/*"
      ],
      "js": ["content/udemy.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["content/linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.skillshare.com/*",
        "https://skillshare.com/*"
      ],
      "js": ["content/skillshare.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
