# Environment variables for Smart E-Learning Automator
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-this-to-a-random-secret-key

# Platform Credentials (Optional - can also provide via CLI)
# COURSERA_USERNAME=your@email.com
# COURSERA_PASSWORD=yourpassword
# UDEMY_USERNAME=your@email.com
# UDEMY_PASSWORD=yourpassword

# ML Model Configuration
ML_MODEL_NAME=distilbert-base-cased-distilled-squad
CONFIDENCE_THRESHOLD=0.7

# Automation Settings
DEFAULT_WAIT_TIME=5
VIDEO_CHECK_INTERVAL=2
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
